@model ENetCareMVC.Web.Models.PackageTransitReceiveViewModel

@{
    ViewBag.Title = "Receive";
}

<h2>Receive</h2>

@using (Html.BeginForm("Receive", "PackageTransit", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4>Receive a Package.</h4>
    <hr/>
    
    @Html.ValidationSummary("", new {@class = "text-danger"})

    Html.RenderPartial("_selectedBarCodesPartial", (ENetCareMVC.Web.Models.ISelectedBarCodesViewModel)Model);

    <div class="form-group">
        @Html.LabelFor(m => m.ReceiveDate, new {@class = "col-md-2 control-label"})
        <div class='input-group input-append date' style="max-width: 100px;" id="datetimepicker1">
            @Html.TextBoxFor(m => m.ReceiveDate, new { @class = "form-control", @style = "width: 100px;", maxlength = 10, @readonly = "readonly" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" name="action" />
            <input type="submit" class="btn btn-default" value="Close" name="action" />
        </div>
    </div>

}
    
<script type="text/javascript">

    $('#datetimepicker1').datetimepicker({format: 'DD-MM-YYYY'});

</script>